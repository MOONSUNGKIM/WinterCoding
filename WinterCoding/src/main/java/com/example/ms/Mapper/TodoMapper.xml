<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
 <mapper namespace="com.example.ms.Mapper.TodoMapper">

  <!-- todolist -->
    <select id="todolist" resultType="com.example.ms.Vo.TodoVo">
        SELECT * FROM todo
    </select>
 
    <!--    update   -->
    <update id="todoupdate" >
      UPDATE todo SET      
      title = #{title},
      content = #{content},
      position = #{position},
      duedate = #{duedate},
      complete = #{complete}
      WHERE no = #{no}
    </update>
 
 </mapper>